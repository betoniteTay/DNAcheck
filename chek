import java.util.ArrayList;
import java.util.Scanner;

public class IsDNAValid {				//class
	public void IsDNAValid(){		//create method
		
		Scanner dnaInput = new Scanner(System.in); //Create a DNA object inside the main method
		System.out.println("Enter your DNA sequence uisng capital letters: "); //Ask users to input a sequence
		String dna = dnaInput.nextLine();
		
		boolean nucl = true;
		
		for(int i = 0; i < dna.length(); i++) {
			if (dna.charAt(i) == 'A' || dna.charAt(i) == 'C' 
			|| dna.charAt(i) == 'T' || dna.charAt(i) == 'G') {}
			else { nucl = false;
						}
					}
		if(nucl == false) System.out.println("The sequence is valid");
		else System.out.println("The sequence is valid");	
		}
	}
